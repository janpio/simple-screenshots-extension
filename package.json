{
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "test": "npm run test:unit",
    "test:unit": "node --test test/lib.test.js test/background.test.js",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:e2e": "playwright test -c test/e2e/playwright.config.js",
    "test:e2e:plumbing": "playwright test -c test/e2e/playwright.config.js test/e2e/00-plumbing.e2e.spec.js",
    "test:e2e:popup-only": "playwright test -c test/e2e/playwright.config.js --grep @popup-only",
    "test:e2e:headed": "playwright test -c test/e2e/playwright.config.js --headed",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.2",
    "eslint": "^9.39.2",
    "jsdom": "^26.0.0"
  },
  "optionalDependencies": {
    "canvas": "^3.2.1"
  }
}
